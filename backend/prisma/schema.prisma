generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userID String @id @default(uuid())
  firstName String 
  lastName String
  address String 
  email String @unique
  contactNo Int
  createdAt DateTime @default(now())
  password String
  isAdmin Boolean
  itemsSold Item[] @relation("seller")
  itemsBought Item[] @relation("buyer")
  }

model Item {
  itemID Int @id @default(autoincrement())
  name String
  type String
  description String
  imgUrl String
  isSold Boolean
  price Int
  dateTimeBought DateTime? 
  dateTimeListed DateTime @default(now())
  seller User @relation("seller", fields: [sellerID], references: [userID])
  sellerID String
  buyer User? @relation("buyer", fields: [buyerID], references: [userID])
  buyerID String?
  // cart Cart? @relation(fields: [cartID], references: [cartID])
  // cartID Int?
  }

model Cart {
  // cartID Int @id @default(autoincrement())
  // item Item[]
  itemID Int 
  userID String 

  @@unique([itemID,userID])
}
